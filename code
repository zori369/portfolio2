<script>
function Convert(a, b, c)
{
 if (b===c)
  a = a;
 else if (b=="USD")
  {
   if(c=="BGN")
    a *= 1.64986;
   else if(c=="EUR")
    a *= 0.843478;
   else if(c=="GBP")
    a *= 0.763465;
  }
 else if (b=="BGN")
  {
   if(c=="USD")
    a *= 0.606022;
   else if(c=="EUR")
    a *= 0.511292;
   else if(c=="GBP")
    a *= 0.462967;
  }
 else if (b=="EUR")
  {
   if(c=="USD")
    a *= 1.18526;
   else if(c=="BGN")
    a *= 1.95583;
   else if(c=="GBP")
    a *= 0.905545;
  }
 else if (b=="GBP")
  {
   if(c=="USD")
    a *= 1.30886;
   else if(c=="BGN")
    a *= 2.15974;
   else if(c=="EUR")
    a *= 1.10415;
  }
 return (Math.floor(a*100)/100);
}
function Add(){
document.getElementById("answer").innerHTML= Convert(document.getElementById("billamt").value, document.getElementById("firstV").value, document.getElementById("secondV").value);
}
</script>
